<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>@ViewBag.Title - WebApp Mockup</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="@Url.Content("~/Content/Stypesheets/bootstrap_assets/ico/apple-touch-icon-144-precomposed.png")" >
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@Url.Content("~/Content/Stypesheets/bootstrap_assets/ico/apple-touch-icon-114-precomposed.png")" >
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="@Url.Content("~/Content/Stypesheets/bootstrap_assets/ico/apple-touch-icon-72-precomposed.png")" >
        <link rel="apple-touch-icon-precomposed" href="@Url.Content("~/Content/Stypesheets/bootstrap_assets/ico/apple-touch-icon-57-precomposed.png")" >
        
        @Styles.Render("~/Content/BootStrap")
        @Scripts.Render("~/bundles/modernizr")

     <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>
        
    </head>
    <body>
       
            
              <div class="navbar navbar-inverse navbar-fixed-top">
              <div class="navbar-inner">
                <div class="container-fluid">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </a>
                  <a class="brand" href="#">WebApp Mockup</a>
                  <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                      Logged in as <a href="#" class="navbar-link"> @User.Identity.Name </a>
                    </p>
                    <ul class="nav">
                      <li class="active"><a href="#">Home</a></li>
                      <li><a href="#about">About</a></li>
                      <li><a href="#contact">Contact</a></li>
                    </ul>
                  </div><!--/.nav-collapse -->
                </div>
              </div>
            </div>

        
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - WebApp Mockup</p>
                </div>
            </div>
        </footer>

        

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

        <script src="@Url.Content("~/Scripts/lib/bootstrap-transition.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-alert.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-modal.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-dropdown.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-scrollspy.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-tab.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-tooltip.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-popover.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-button.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-collapse.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-carousel.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/lib/bootstrap-typeahead.js")" type="text/javascript"></script>
    </body>
</html>
